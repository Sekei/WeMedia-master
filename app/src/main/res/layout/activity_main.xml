<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_news"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/selector_btoom_text"
                android:textSize="12sp"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:drawableTop="@drawable/selector_home"
                android:text="头条"/>
            <RadioButton
                android:id="@+id/rb_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@drawable/selector_btoom_text"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:drawableTop="@drawable/selector_game"
                android:text="游戏"/>
            <RadioButton
                android:id="@+id/rb_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@drawable/selector_btoom_text"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:drawableTop="@drawable/selector_video"
                android:text="视频"/>
            <RadioButton
                android:id="@+id/rb_live"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@drawable/selector_btoom_text"
                android:button="@null"
                android:textSize="12sp"
                android:gravity="center"
                android:drawableTop="@drawable/selector_live"
                android:text="直播"/>
            <RadioButton
                android:id="@+id/rb_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@drawable/selector_btoom_text"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@drawable/selector_me"
                android:textSize="12sp"
                android:text="我"/>



        </RadioGroup>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>